	//	Select insurancesum = new Select(IS);
	//	insurancesum.selectByValue(insuranceValue);
	//	List<WebElement> damage = driver.findElements(By.tagName("option"));
	//	Select damageinsurance = new Select(DI);
	//	damageinsurance.selectByVisibleText(damageValue);
	// }
	
	
	@FindBy (xpath="//input[@id='email']") WebElement EML;
	@FindBy (xpath="//input[@id='password']") WebElement PWD;
	public void sendQuote(String eml,String pwd) {
		EML.sendKeys(eml);
		PWD.sendKeys(pwd);
	}
	
	
}
